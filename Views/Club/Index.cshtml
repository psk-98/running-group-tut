@{
}

<h1>Hello Club</h1>

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            @foreach (var club in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" width="100%" height="225" src="@club.Image" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@club.Title</p>
                            @* <p class="card-text">@club.Description</p> *@
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Club" asp-action="Detail" asp-route-id="@club.Id" type="button"
                                        class="btn btn-sm btn-outline-secondary">View</a>
                                    <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                                </div>
                                <small class="text-muted">@club.ClubCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>