@{
}
<h1>Project Race</h1>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var race in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" width="100%" height="225" src="@race.Image" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@race.Title</p>
                            @* <p class="card-text">@race.Description</p> *@
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="button" asp-controller="Race" asp-action="Detail" asp-route-id="@race.Id"
                                        class="btn btn-sm btn-outline-secondary">View</a>
                                    <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                                </div>
                                <small class="text-muted">@race.RaceCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>